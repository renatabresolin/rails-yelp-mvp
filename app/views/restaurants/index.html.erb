<div class="container pt-3">
<h1>Restaurants</h1>
 <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.category %></td>
          <td class="btn btn-outline-light"><%= link_to 'Show', restaurant %> </td>
          <td class="btn btn-outline-light"><%= link_to 'Delete', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<%= link_to 'Add restaurant', new_restaurant_path, class: "btn btn-light" %>
</div>
